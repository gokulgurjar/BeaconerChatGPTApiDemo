@model ChatGPTApiDemo.Models.ChatGptRequest
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Chat GPT - AI File Analysis</h2>



      
        <form asp-action="Index" asp-controller="Chat" method="post" enctype="multipart/form-data">
            <!-- File Upload -->
            <div class="mb-3">
                <label class="form-label fw-bold">Choose Files:</label>
                <input type="file" name="Files" class="form-control" multiple />
                <small class="text-muted">Supported: .xlsx, .docx, .pdf</small>
            </div>
            <!-- Upload Template File -->
            <div class="mb-3">
                <label class="form-label fw-bold">Choose Template File:</label>
                <input type="file" name="FileTemplate" class="form-control" />
                <small class="text-muted">Supported: .docx</small>
            </div>

            <!-- Prompt -->
            <div class="mb-3">
                <label class="form-label fw-bold">Your Prompt:</label>
                <textarea name="Prompt" rows="5" class="form-control" placeholder="Ask your question here...">@Model.Prompt</textarea>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Analyze & Get Response</button>
            </div>
        </form>

        <!-- Response Section -->
